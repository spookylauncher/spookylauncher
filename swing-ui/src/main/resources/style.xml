<synth>
    <style id="basicStyle">
        <font name="Minecraftia 2.0" size="13"/>
    </style>

    <style id="buttonStyle">
        <font name="Minecraftia 2.0" size="13"/>

        <state value="ENABLED">
            <color type="FOREGROUND" value="#FFFFFF" />
            <imagePainter method="buttonBackground" path="images/button_enabled.png"
                          sourceInsets="40 40 40 40"/>
        </state>
        <state value="MOUSE_OVER">
            <color type="FOREGROUND" value="#000000" />
            <imagePainter method="buttonBackground" path="images/button_over.png"
                          sourceInsets="40 40 40 40"/>
        </state>
    </style>

    <bind style="basicStyle" type="region" key=".*"/>
    <bind style="buttonStyle" type="region" key="Button"/>
</synth>